{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["warn", "single"],
        "array-bracket-newline": ["warn", "consistent"],
        "no-var": "error",
        "indent": ["warn", "tab", { "VariableDeclarator": { "let": 2, "const": 3 } }],
        "jsx-quotes": ["warn", "prefer-double"],
        "semi": ["error", "never"],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "react/prop-types": 0,
        "react/jsx-indent": [2, "tab"],
        "react/jsx-indent-props": [2, "tab"],
        "react/react-in-jsx-scope": "off",
        "spaced-comment": ["warn", "always"]
    }
}
